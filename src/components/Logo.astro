---
import { Link } from 'accessible-astro-components'
import { Image } from 'astro:assets'
import logo from '../assets/img/logo-san-juan.webp'

/**
 * Logo Component
 *
 * @description Logo description
 */
interface Props {
  /**
   * Whether to load the image eagerly or lazily
   * @default 'eager'
   */
  loading?: 'eager' | 'lazy'
}

const { loading = 'eager' }: Props = Astro.props
---

<Link href="/" class="flex items-center gap-2">
  <Image 
    src={logo} 
    alt="Universidad Privada San Juan Bautista Logo" 
    width={240}
    height={190}
    class="w-40 h-auto md:w-44 lg:w-48"
    loading="eager"
  />
</Link>