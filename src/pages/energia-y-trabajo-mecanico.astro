<style>
  /* ======= VARIABLES DE COLOR ======= */
  :root {
    --bg-color: #f9fafb;
    --text-color: #1f2937;
    --muted-text: #060b11;
    --card-bg: #ffffff;
    --border-color: #e5e7eb;
  }

  :global(.darkmode) {
    --bg-color: #0f172a;
    --text-color: #f9fafb;
    --muted-text: #a1a1aa;
    --card-bg: #1e293b;
    --border-color: #334155;
  }

  body {
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background 0.3s ease, color 0.3s ease;
  }

  /* ======= ENCABEZADO PRINCIPAL ======= */
  .header-section {
    text-align: center;
    padding: 5rem 1rem 3rem 1rem;
    background: linear-gradient(135deg, #3b82f6 0%, #6366f1 100%);
    color: #fff;
    border-bottom: 3px solid rgba(255, 255, 255, 0.3);
  }

  .main-title {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 1rem;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
  }

  .main-subtitle {
    font-size: 1.25rem;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
    opacity: 0.95;
  }

  /* ======= TARJETAS ======= */
  .physics-card {
    border-radius: 1rem;
    padding: 2rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
  }

  .physics-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 24px rgba(0, 0, 0, 0.1);
  }

  .card-icon {
    width: 4rem;
    height: 4rem;
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.25rem;
    color: #fff;
  }

  /* ======= COLORES TARJETAS ======= */
  .card-yellow .card-icon { background: linear-gradient(135deg, #facc15, #eab308); }
  .card-green .card-icon { background: linear-gradient(135deg, #10b981, #059669); }
  .card-orange .card-icon { background: linear-gradient(135deg, #fb923c, #f97316); }
  .card-purple .card-icon { background: linear-gradient(135deg, #a78bfa, #7c3aed); }
  .card-teal .card-icon { background: linear-gradient(135deg, #2dd4bf, #14b8a6); }
  .card-red .card-icon { background: linear-gradient(135deg, #f87171, #ef4444); }

