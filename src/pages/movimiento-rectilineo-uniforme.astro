    font-size: 1.25rem;
  }

  :global(.darkmode) .formula-box h3 {
    color: var(--primary-300, #60a5fa);
  }

  .formula-box code {
    display: block;
    background: var(--neutral-50, #ffffff);
    padding: 1rem;
    margin: 1rem 0;
    border-radius: 0.25rem;
    font-size: 1.125rem;
    font-weight: bold;
    color: var(--primary-600, #0066cc);
  }

  :global(.darkmode) .formula-box code {
    background: var(--neutral-900, #1a202c);
    color: var(--primary-300, #60a5fa);
  }

  .formula-box p {
    color: var(--neutral-700, #4a5568);
  }

  :global(.darkmode) .formula-box p {
    color: var(--neutral-300, #cbd5e0);
  }

  .formula-box ul {
    color: var(--neutral-700, #4a5568);
  }

  :global(.darkmode) .formula-box ul {
    color: var(--neutral-300, #cbd5e0);
  }

  /* Example Box - Adaptado para modo oscuro */
  .example-box {
    background: #fff9e6;
    border: 2px solid #ffc107;
    padding: 1.5rem;
    margin: 1rem 0;
    border-radius: 0.5rem;
  }

  :global(.darkmode) .example-box {
    background: #3d3420;
    border-color: #d97706;
  }

  .example-box p {
    color: var(--neutral-800, #2d3748);
  }

  :global(.darkmode) .example-box p {
    color: var(--neutral-200, #e2e8f0);
  }

  .example-box ul {
    color: var(--neutral-800, #2d3748);
  }

  :global(.darkmode) .example-box ul {
    color: var(--neutral-200, #e2e8f0);
  }

