    background: var(--neutral-50, #ffffff);
    padding: 0.75rem;
    margin: 0.75rem 0;
    border-radius: 0.25rem;
    font-weight: bold;
    color: #d97706;
  }

  :global(.darkmode) .example-box code {
    background: #2d2415;
    color: #fbbf24;
  }

  /* Table - Adaptado para modo oscuro */
  table {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
  }

  th, td {
    border: 1px solid var(--neutral-300, #cbd5e0);
    padding: 0.75rem;
    text-align: left;
  }

  :global(.darkmode) th,
  :global(.darkmode) td {
    border-color: var(--neutral-600, #4a5568);
  }

  th {
    background: var(--primary-600, #0066cc);
    color: white;
    font-weight: bold;
  }

  :global(.darkmode) th {
    background: var(--primary-700, #0052a3);
  }

  tr:nth-child(even) {
    background: var(--neutral-50, #f7fafc);
  }

  :global(.darkmode) tr:nth-child(even) {
    background: var(--neutral-800, #2d3748);
  }

  :global(.darkmode) td {
    color: var(--neutral-200, #e2e8f0);
  }

  ol, ul {
    padding-left: 1.5rem;
  }

  li {
    margin: 0.5rem 0;
  }

  /* Headings en dark mode */
  :global(.darkmode) h3 {
    color: var(--neutral-100, #f7fafc);
  }
</style>